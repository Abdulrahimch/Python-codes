from netmiko import ConnectHandler
with open("ip-address", "r") as f:
    devices_ip = f.read().splitlines()
for i in devices_ip:    
    device={'device_type':'cisco_ios', 'ip' : ip, 'username' : 'cisco', 'password' : 'cisco'}
    print("connectiong to device " + ip)
    connection=ConnectHandler(**device)
    print("moving to the enable mode")
    connection.enable()
    output = connection.send_command("show run")
    prompt = connection.prompt()
    prompt = prompt[:-1]
    import datetime
    now = datetime.datetim.now()
    today = str(now.year) + "-"  + str(now.month) +"-" + str(now.day)
    file = today + "--" + prompt 
    with open(file + 'txt", "w") as backup:
        backup.write(output)
    print("backup has been completed succesfully")
    print("#" * 30)
    


connection.disconnect()

